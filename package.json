{
  "name": "ApiChainDebug",
  "version": "1.2.4",
  "minServerVersion": "1.2.4",
  "defaultRunnerUrl": "http://127.0.0.1:6588",
  "payJumpUrl": "http://127.0.0.1:6588/pay/jump/",
  "payQueryUrl": "http://127.0.0.1:6588/pay/query/",
  "aiModels": "gpt-4o,grok-4,deepseek-chat,qwen-2p5-32b-instruct-hw",
  "description": "接口文档与单元测试工具",
  "keywords": [
    "postman",
    "项目接口管理",
    "迭代文档",
    "自动化测试"
  ],
  "homepage": "https://apichain.app/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jiangliuer326442/ApiChain.git"
  },
  "license": "MIT",
  "author": {
    "name": "方海亮",
    "email": "fanghailiang2016@gmail.com",
    "url": "https://blog.csdn.net/fanghailiang2016"
  },
  "contributors": [
    {
      "name": "方海亮",
      "email": "fanghailiang2016@gmail.com",
      "url": "https://blog.csdn.net/fanghailiang2016"
    }
  ],
  "main": "./src/main/main.ts",
  "scripts": {
    "build": "concurrently \"yarn build:main\" \"yarn build:renderer\"",
    "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && yarn build:dll",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && yarn build && electron-builder build --publish never && rm -rf release/build/linux-unpacked && yarn build:dll",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "start": "yarn start:renderer",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "test": "jest",
    "build-icon": "electron-icon-builder --input=./assets/icon.png --output=assets --flatten"
  },
  "browserslist": [],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.6",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "antd": "^5.16.5",
    "axios": "^1.6.8",
    "base-64": "^1.0.0",
    "buffer": "^6.0.3",
    "dayjs": "^1.11.11",
    "dexie": "^4.0.4",
    "dotenv": "^17.2.1",
    "draft-js": "^0.11.7",
    "electron-log": "^4.4.8",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.4",
    "fernet": "^0.3.3",
    "fs-extra": "^11.2.0",
    "github-markdown-css": "^5.5.1",
    "indexeddb-export-import": "^2.1.5",
    "js-md5": "^0.8.3",
    "less": "^4.2.0",
    "lodash": "^4.17.21",
    "path-browserify": "^1.0.1",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-json-view": "^1.21.3",
    "react-markdown": "^9.0.1",
    "react-mde": "5.8.0",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-syntax-highlighter": "^15.5.0",
    "redux": "^4.0.4",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "showdown": "^2.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.3.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@svgr/webpack": "^8.1.0",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/base-64": "^1.0.2",
    "@types/detect-port": "^1.3.5",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.17.4",
    "@types/markdown-navbar": "^1.4.4",
    "@types/node": "20.6.2",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/react-test-renderer": "^18.0.1",
    "@types/showdown": "^2.0.6",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/uuid": "^9.0.8",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.1",
    "core-js": "^3.32.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "detect-port": "^1.5.1",
    "electron": "^26.2.4",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "electron-icon-builder": "^2.0.1",
    "electronmon": "^2.0.2",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-erb": "^4.1.0-0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-import-resolver-webpack": "^0.13.7",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "less-loader": "^12.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "react-refresh": "^0.14.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "sass": "^1.67.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "build": {
    "productName": "ApiChain",
    "appId": "com.mustafa.ApiChain",
    "icon": "assets/icons",
    "artifactName": "${productName}_${version}_${arch}.${ext}",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "category": "Development",
      "target": "deb"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "jiangliuer326442",
        "repo": "ApiChain"
      }
    ],
    "releaseInfo": {
      "releaseDate": "2025-09-24",
      "releaseNotes": "- Team version support allows running runner on the intranet, with data stored internally and shared among team members.\n- AI-enhanced interface retrieval and project inquiry.\n- Public request parameters.\n- Batch copy and paste\n- Optimization of JSON network request parameters"
    }
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  }
}
